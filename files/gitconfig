[user]
                name = DeLynn Berry
               email = delynn@gmail.com

[alias]
                   a = add
                  aa = !git add -u && git add . && git status
                  ap = add -p
                   b = branch -v -a
                  br = branch
                 brm = !sh -c 'git branch -D $1 && git push origin :$1' -
                 brp = remote prune origin
                   c = commit
                  cm = commit -m
                  ca = commit --amend
                 can = commit --amend --no-edit
             cleanup = !git remote prune origin && git gc && git clean -dfx && git stash clear
                  co = checkout
                 cob = checkout -b
                 cot = checkout -t
                  cp = cherry-pick
                   d = diff
                  ds = diff --staged
                done = !git fetch && git rebase origin/master && git checkout master && git merge @{-1} && rake && git push
                  ir = !git rebase -i origin/master
                   l = log -1 --oneline
                 log = log --oneline
                   m = merge --no-commit
                  mo = !git merge --no-commit origin/$1
              nmerge = !git merge $1 --no-commit --no-ff
                  ms = merge --squash
                   p = push
                  ph = push heroku master
                  pr = pull --rebase origin $1
             publish = !git checkout master && git pull && git checkout dev && git rebase master && git checkout master && git merge dev && git wtf
                   r = remote -v
                   s = status -sb
                  st = status
                  up = !git fetch origin && git rebase origin/master

[apply]
          whitespace = nowarn

[branch]
      autosetupmerge = true

[color]
	                ui = true

[color "diff"]
	              meta = yellow
	              frag = magenta bold
	               old = red bold
	               new = green bold
	            commit = yellow bold
	        whitespace = red reverse

[color "diff-highlight"]
           oldNormal = red bold
        oldHighlight = red bold 52
           newNormal = green bold
        newHighlight = green bold 22

[color "branch"]
             current = yellow reverse
               local = yellow bold
              remote = green bold
               plain = red bold

[color "status"]
               added = yellow
             changed = green bold
           untracked = blue bold
[commit]
            template = ~/.gitmessage
	gpgSign = true

[core]
        excludesfile = ~/.gitignore
            filemode = true
    logallrefupdates = true
          whitespace = space-before-tab, trailing-space
            autocrlf = input
	             pager = diff-so-fancy | less --tabs=2 -RFX
              editor = /usr/bin/env atom --wait

[credential]
	            helper = osxkeychain

[fetch]
               prune = true

[format]
              pretty = %C(yellow)%h%Creset %s %C(red)(%an, %cr)%Creset

[merge]
              commit = no
                  ff = no
                tool = opendiff
             summary = true

[push]
  # Push current branch even if you've never pushed it before
             default = current

[github]
                user = delynn
                site = https://github.com
            endpoint = https://api.github.com
[gpg]
	program = /usr/local/bin/krgpg
[tag]
	forceSignAnnotated = true
