[user]
                name = DeLynn Berry
               email = delynn@gmail.com

[alias]
                   a = add
                  aa = !git add -u && git add . && git status
                  ap = add -p
                   b = branch -v -a
                  br = branch
                 brm = !sh -c 'git branch -D $1 && git push origin :$1' -
                   c = commit
                  cm = commit -m
                  ca = commit --amend
                 can = commit --amend --no-edit
             cleanup = !git remote prune origin && git gc && git clean -dfx && git stash clear
                  co = checkout
                 cob = checkout -b
                  cp = cherry-pick
                   d = diff
                  ds = diff --staged
                done = !git fetch && git rebase origin/master && git checkout master && git merge @{-1} && rake && git push
                  ir = !git rebase -i origin/master
                   l = log --oneline
                log1 = log -1 --oneline
                   m = merge --no-commit
                  mo = !git merge --no-commit origin/$1
              nmerge = !git merge $1 --no-commit --no-ff
                  ms = merge --squash
                   p = push
                  ph = push heroku master
             publish = !git checkout master && git pull && git checkout dev && git rebase master && git checkout master && git merge dev && git wtf
                   r = remote -v
                   s = status -sb
                  st = status
                  up = !git fetch origin && git rebase origin/master

[apply]
          whitespace = nowarn

[branch]
      autosetupmerge = true

[color]
                  ui = auto

[color "diff"]
                meta = blue bold
                frag = magenta bold
                 old = red bold
                 new = green bold

[color "branch"]
             current = yellow reverse
               local = yellow bold
              remote = green bold
               plain = red bold

[color "status"]
               added = yellow
             changed = green bold
           untracked = blue bold
[commit]
            template = ~/.gitmessage

[core]
        excludesfile = ~/.gitignore
            filemode = true
    logallrefupdates = true
          whitespace = space-before-tab, trailing-space
            autocrlf = input
               pager = less -+$LESS -FRX
              editor = /usr/bin/env atom --wait

[format]
              pretty = %C(yellow)%h%Creset %s %C(red)(%an, %cr)%Creset

[merge]
                tool = opendiff
             summary = true

[push]
  # Push current branch even if you've never pushed it before
             default = current

[github]
                user = delynn
                site = https://github.com
            endpoint = https://api.github.com
